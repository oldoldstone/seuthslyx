Style Standard
	ParIndent             ""
  ParSep		0.5 
End

Preamble
\makeatletter 
\let\appendix@orig\appendix
\renewcommand\appendix{
  \pagestyle{seustyle}
  \@mainmattertrue
  \appendix@orig
  \titlecontentsappendix
}
\renewcommand\indexname{索引}
\makeatother
